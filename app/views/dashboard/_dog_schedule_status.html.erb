<div id="dog_schedule_status_<%= dog_schedule.id %>" data-schedule-edit-target="status">
  <div data-schedule-edit-target="display" class="flex items-center mb-1">
    <p class="text-gray-700 dark:text-gray-400 mr-2">Status: <%= dog_schedule.status&.humanize %></p>
    
    <% if dog_schedule.not_in_past? %>
      <button data-action="click->schedule-edit#showForm" class="text-sm text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
        Edit
      </button>
    <% end %>
  </div>
  <div class="mt-2">
    <strong>Pickup Address:</strong> <%= dog_schedule.dog.full_street_address %><br>
  </div>
</div>
